{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API no events",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net6.0/contacts-api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "BasePath": "/",
                "DatabaseConnectionString": "mongodb://admin:mongodb-k8s-demo@localhost:27017",
                "DatabaseName": "mongotest",
                "ContactsCollectionName": "contacts",
                "QueueConnectionString": "", // Not required for "QueueType": "None" or "Dapr"
                "QueueName": "contacts",
                "QueueType": "None", // AzureServiceBus, AzureEventGrid, Dapr, RabbitMQ, or None
                "TelemetryConnectionString": "",
                "TelemetryType": "Console"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
