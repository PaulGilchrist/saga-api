{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API no events",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Debug/net6.0/contacts-api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "BasePath": "/",
                "DatabaseConnectionString": "mongodb://admin:mongodb-k8s-demo@localhost:27017",
                "DatabaseName": "mongotest",
                "ContactsCollectionName": "contacts",
                "QueueConnectionString": "", // Required if using AzureServiceBus, AzureEventGrid, or RabbitMQ
                "QueueName": "contacts",
                "QueueType": "None", // AzureServiceBus, AzureEventGrid, Dapr, RabbitMQ, or None
                "TelemetryConnectionString": "",
                "TelemetryType": "Console"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
